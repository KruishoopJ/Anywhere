<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.johnbaaij.anywhere">

    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.settings.TermsConActivity"></activity>
        <activity android:name=".main.settings.SupportActivity" />
        <activity android:name=".main.settings.ProfileActivity" />
        <activity
            android:name=".AddNodesActivity"
            android:label="@string/title_activity_add_nodes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QRCodeScannerActivity"
            android:label="@string/title_activity_qr_code_scanner"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="com.google.android.gms.vision.DEPENDENCIES" android:value="barcode"></meta-data>

    </application>

</manifest>